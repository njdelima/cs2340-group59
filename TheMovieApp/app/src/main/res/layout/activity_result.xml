<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="550dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ga.neerajdelima.themovieapp.ResultActivity"
    android:weightSum="1"
    android:orientation="vertical">

    <TextView
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:id="@+id/resultView"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@id/resultView"
        android:paddingTop="20dp"
        android:text="Rate this movie!"
        android:id="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Spinner
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:id="@+id/rating_spinner"
        android:prompt="@string/rating_prompt"
        android:entries="@array/rating_score"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/resultView"
        android:paddingTop="20dp"
        android:layout_toRightOf="@id/textView2"/>
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/button"
        android:layout_below="@id/resultView"
        android:layout_toRightOf="@id/rating_spinner"
        android:paddingTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/displayRating"
        android:paddingTop="20dp"
        android:text="Average Rating"
        android:layout_below="@id/rating_spinner"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totalRatings"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/displayRating" />

</RelativeLayout>
