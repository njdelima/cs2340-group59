<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/home_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="ga.neerajdelima.themovieapp.HomeActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:id="@+id/username_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:id="@+id/view_profile_userName_label"
                android:text="Username: "
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:id="@+id/view_profile_userName"
                android:layout_toRightOf="@id/view_profile_userName_label"
                android:fontFamily="sans-serif-light"
                android:textSize="15sp"
                android:gravity="center_vertical"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:id="@+id/firstName_layout"
            android:layout_below="@+id/username_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:id="@+id/view_profile_firstName_label"
                android:text="First Name: "
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:id="@+id/view_profile_firstName"
                android:layout_toRightOf="@id/view_profile_firstName_label"
                android:fontFamily="sans-serif-light"
                android:textSize="15sp"
                android:gravity="center_vertical"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:id="@+id/lastName_layout"
            android:layout_below="@id/firstName_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:id="@+id/view_profile_lastName_label"
                android:text="Last Name: "
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:id="@+id/view_profile_lastName"
                android:layout_toRightOf="@id/view_profile_lastName_label"
                android:fontFamily="sans-serif-light"
                android:textSize="15sp"
                android:gravity="center_vertical"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:id="@+id/major_layout"
            android:layout_below="@+id/lastName_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:id="@+id/view_profile_major_label"
                android:text="Major: "
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:id="@+id/view_profile_major"
                android:layout_toRightOf="@id/view_profile_major_label"
                android:fontFamily="sans-serif-light"
                android:textSize="15sp"
                android:gravity="center_vertical"/>
        </RelativeLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/view_edit_button"
            android:text="Edit Profile"
            android:onClick="editProfile"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" />

    </RelativeLayout>
    <ListView
        android:id="@id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#B000"/>
</android.support.v4.widget.DrawerLayout>